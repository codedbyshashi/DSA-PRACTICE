//BRUTE FORCE
class Solution {
  public int lowerBound(int[] nums, int x) {
    int n = nums.length;

    for (int i = 0; i < n; i++) {
      if (nums[i] >= x) {
        return i;
      }
    }
    return n;
  }
}
// OPTIMAL SOLUTION
class Solution {
  public int lowerBound(int[] nums, int x) {
    int n = nums.length;
    int low = 0, high = n - 1;
    int ans = n;
    while (low <= high) {
      int mid = (low + (high - low) / 2);
      if (nums[mid] >= x) {
        ans = mid;
        high = mid - 1;
      } else {
        low = mid + 1;
      }
    }
    return ans;
  }
}
